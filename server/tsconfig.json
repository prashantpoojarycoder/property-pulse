{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "outDir": "dist",
    "rootDir": ".",

    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../shared/*"]
    },

    "esModuleInterop": true,
    "strict": false,
    "skipLibCheck": true,

    "resolveJsonModule": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist", "vite.ts", "vite.config.ts", "storage.ts"]
}
